          <span class="card--side-1">15</span>
          <span class="card--side-2 card--selected">O</span>
        </span>
        <span class="card card--placeholder">♥</span>
        <span class="card card--2-sided">
          <span class="card--side-1">16</span>
          <span class="card--side-2 card--selected">P</span>
        </span>
      </div>
      <button id="toggleFlipper05">Stagger flip animation</button>
      <div id="flip05"></div>
    </section>
